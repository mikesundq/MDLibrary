@model MDLibrary.MVC.Models.LoanVM.DetailsLoanVm

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Loan</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Member
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeOfLoan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeOfLoan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeToReturnBook)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeToReturnBook)
        </dd>
        <dt class="col-sm-2">
            Number of books
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LoanBooks.Count)
        </dd>
        @foreach (var item in Model.LoanBooks)
        {
    <dd class="col-sm-10">
        <td>
            @Html.DisplayFor(modelItem => item.BookCopy.BookDetails.Titel)
        </td>
        <td>
            <a asp-action="ReturnBook" asp-route-bookCopyID="@item.BookCopyID" asp-route-loanID="@item.LoanID">Return book</a>
            @*<a href="/Loans/ReturnBook/@item.BookCopyID/@item.LoanID">return book</a>*@
        </td>
    </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Go to Loan List</a> |
    <a asp-controller="Members" asp-action="Details" asp-route-id="@Model.MemberID">Go to @Model.Member.Name</a>
</div>
