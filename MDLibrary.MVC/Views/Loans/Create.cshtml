@model MDLibrary.MVC.Models.LoanVM.CreateLoanVm;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Loan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DisplayDate" class="control-label"></label>
                @Html.DisplayFor(model => model.DisplayDate)
            </div>
            <div class="form-group">
                <label asp-for="TimeToReturnBook" class="control-label"></label>
