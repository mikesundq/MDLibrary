@model MDLibrary.MVC.Models.LoanVM.CreateLoanVm;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Loan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TimeOfLoan" class="control-label"></label>
                <input asp-for="TimeOfLoan" class="form-control" />
                <span asp-validation-for="TimeOfLoan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeToReturnBook" class="control-label"></label>
                @Html.DisplayFor(model => model.TimeToReturnBook)
            </div>
            <div class="form-group">
                <label asp-for="BookCopyName" class="control-label"></label>
                <select asp-for="BookCopyName" class ="form-control" asp-items="ViewBag.BookCopyID"></select>
            </div>
            <div class="form-group">
                <label asp-for="MemberName" class="control-label"></label>
                @Html.DropDownListFor(m => m.MemberName, Model.MemberName, "Select Member");
                <!--<select asp-for="MemberName" class ="form-control" asp-items=""></select> -->
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
