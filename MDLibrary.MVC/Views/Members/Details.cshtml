@model MDLibrary.MVC.Models.MemberVM.DetailsMemberVm

@{
    ViewData["Title"] = "Details";
}

<h1>Loans for @Html.DisplayFor(model => model.Name)</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                Book
            </th>
            <th>
                Time of loan
            </th>
            <th>
                Time to return book
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var loan in Model.Loans)
        {
        <tr>
            <td>
                @*@Html.DisplayFor(modelItem => loan.BookCopy.BookDetails.Titel)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => loan.TimeOfLoan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => loan.TimeToReturnBook)
            </td>
            <td>
                <a asp-controller="Loan" asp-action="Edit" asp-route-id="@loan.ID">Edit</a> |
                <a asp-controller="Loan" asp-action="Details" asp-route-id="@loan.ID">Details</a> |
                <a asp-controller="Loan" asp-action="Delete" asp-route-id="@loan.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
